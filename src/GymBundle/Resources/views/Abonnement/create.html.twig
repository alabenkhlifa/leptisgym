{% extends '@Gym/Layout/Layout.html.twig' %}
{% block blocktitle %}Créer Abonnement{% endblock %}
{% block pagetitle %}Créer Abonnement{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('Assets/bower_components/bootstrap-datepicker/bootstrap-datepicker.min.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('Assets/bower_components/custom-select/custom-select.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('Assets/bower_components/bootstrap-select/bootstrap-select.min.css') }}" rel="stylesheet" />
    <link href="{{ asset('Assets/bower_components/bootstrap-tagsinput/dist/bootstrap-tagsinput.css') }}" rel="stylesheet" />
    <link href="{{ asset('Assets/bower_components/bootstrap-touchspin/dist/jquery.bootstrap-touchspin.min.css') }}" rel="stylesheet" />
    <link href="{{ asset('Assets/bower_components/multiselect/css/multi-select.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}
{% block body %}
<center>
    <div class="col-sm-offset-4 col-sm-4 col-sm-12">
        <div class="white-box">
            <form class="no-bg-addon" method="POST">
                <div class="form-group">
                    <div class="input-group">
                        <input class="form-control" name="nom" placeholder="Nom" type="text" required>
                        <div class="input-group-addon"><i class="ti-user"></i></div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <input class="form-control" name="prenom" placeholder="Prenom" type="text" required>
                        <div class="input-group-addon"><i class="ti-user"></i></div>
                    </div>
                </div>
                <div class="radio radio-info">
                    <input name="sexe" id="radio6" value="Homme" type="radio" checked>
                    <label for="radio6"> Homme </label>
                </div>
                <div class="radio radio-danger">
                    <input name="sexe" id="radio7" value="Femme" type="radio">
                    <label for="radio7"> Femme </label>
                </div>
                <div class="col-sm-12">
                    <select class="selectpicker m-b-20 m-r-10" name="type" data-style="btn-success btn-outline">
                        <option data-tokens="ketchup mustard">Musculation</option>
                        <option data-tokens="mustard">Boxe</option>
                    </select>
                </div>
                <div class="form-group">
                    <label class="control-label">Date de Début</label>
                    <input class="form-control" type="date" name="datedebut" value="{{ today | date('Y-m-d') }}" min="{{ today | date('Y-m-d') }}" required>
                </div>
                <div class="col-sm-12">
                    <select class="selectpicker m-b-20 m-r-10" name="duree" data-style="btn-warning btn-outline">
                        <option data-tokens="1 Mois" value="1">1 Mois</option>
                        <option data-tokens="3 Mois" value="3">3 Mois</option>
                        <option data-tokens="6 Mois" value="6">6 Mois</option>
                        <option data-tokens="12 Mois" value="12">12 Mois</option>
                    </select>
                </div>
                <button class="fcbtn btn btn-outline btn-primary btn-1c">
                    <span class="btn-label"><i class="fa fa-check"></i></span> Valider
                </button>
            </form>
        </div>
    </div>
</center>
{% endblock %}
{% block scripts %}
    <script src="{{ asset('Assets/bower_components/custom-select/custom-select.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('Assets/bower_components/bootstrap-select/bootstrap-select.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('Assets/bower_components/bootstrap-tagsinput/dist/bootstrap-tagsinput.min.js') }}"></script>
    <script src="{{ asset('Assets/bower_components/bootstrap-touchspin/dist/jquery.bootstrap-touchspin.min.js') }}" type="text/javascript"></script>
    <script type="text/javascript" src="{{ asset('Assets/bower_components/multiselect/js/jquery.multi-select.js') }}"></script>
{% endblock %}